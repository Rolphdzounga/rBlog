<script>
  $(function() {
    $('textarea').editable({
      inlineMode: false ,
      // Set red theme name.
      theme: 'red'
    })
  });
</script>
<div class="comments">
	<h2 class="page-header"><%= @post.comments.length %> Comments</h2><% @post.comments.each do |c| %>
	<div class="comment">
		<div class="row">
			<div class="col-md-2"><%= image_tag("user.png")%></div>
			<div class="col-md-10">
				<div class="well">
					<h4><%= c.name %><span><%= c.created_at.to_time.strftime('%e %B %l:%M %p') %></span></h4>
					<p><%= raw c.body %></p>
				</div>
			</div>
		</div>
	</div><%end%>
	<div class="add-comment">
		<h2 class="page-header">Ajouter un commentaire</h2><%= form_for([@post, @post.comments.build]) do |f| %>
		<div class="form-group"><%= f.label :Auteur %><br><%= f.text_field :name, class:'form-control' %></div>
		<div class="form-group"><%= f.label :email %><br><%= f.text_field :email, class:'form-control' %></div>
		<div class="form-group"><%= f.label :commentaire %><br><%= f.text_area :body, class:'form-control' %></div>
		<div class="form-group"><%= f.submit :Valider, class:'btn btn-primary' %></div>
		<%end%>
	</div>
</div>