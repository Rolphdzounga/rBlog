<!DOCTYPE html>
<html>
<head>
  <title>RBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>





<nav class="nav navbar-fixed-top">
<div class="container-fluid">
<div class="navbar-header">

	<button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#myNav"  >
		<span class="icon-bar"></span>
		<span class="icon-bar"></span>
		<span class="icon-bar"></span>
	</button>

	<a class="navbar-brand" href="<%= root_path%>"><h1>rBlog</h1></a>		
</div>

<div class="collapse navbar-collapse" id="myNav">
	<ul class="nav navbar-nav">
		<li class="active">
			
			<%= link_to "Home" , root_path %></li>
		<li>
			
			<%= link_to "About" , about_path %></li>
		<li>
			
			<%= link_to "Contacts" , contacts_path %></li>
	</ul>
	<%= render 'partials/search' %>
</div>


</div>
</nav>

<section>

	<div class="container">

		<div class="row">
		
		<% if params[:controller] == 'usrs' && params[:action] == 'new' %>
			
			<div class="col-md-6 col-md-offset-3">
				<div class="well">

					<%= render 'partials/flash' %>
					<%= yield %>
					
				</div>
			</div>


			
		<% else %>
			<div class="col-md-8 ">
				<div class="well">

		<ul class="pull-right cnx_user">
			<% if logged_in? %>
			
			<li>
				<%= link_to "Deconnexion" , logout_path %></li>
			<li>
			<%else%>
			<li>
				<%= link_to "Connexion" , login_path %></li>
			<li>
			<%end%>
		</ul>
					
					<%= render 'partials/flash' %>

					<%= yield %>

				</div>

			</div>


			<div class="col-md-4">
				<%= render 'partials/sidebar' %>
			</div>
			
			
		<% end %>

		</div>
	</div>
</section>
<%= debug(session[:user_id]) %>
<%= debug(params) %>
<%= render 'partials/footer' %>


</body>
</html>
