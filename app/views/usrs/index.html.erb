<h1 align="center">Liste des blogeurs du site web rBlog.com</h1>

<div align="center"><% @users.each do |u| %>
		<ul class="listing">
			<div class="row">
				<div class=" well col-md-4 col-md-offset-4">
					<li><%= link_to gravatar_for(u) , usr_path(u)  %></li>
					<li class="post-title"><%= link_to u.username, usr_path(u) %></li>
					<li><small><%= pluralize(u.posts.count, "post") if u.posts %></small></li>
				</div>
			</div>
		</ul>
	<%end%>
</div>

