<h2 class="page-header">Manage Categories  
<%=  link_to "Add New" , new_admin_category_path , class:"btn btn-success pull-right" %>
</h2>
<%if @categories.exists? %>
<table class="table table-striped">
	<tr>
		<th>Category Title</th>
		<th>Created Date</th>
		<th>Actions</th>
	</tr>
	<% @categories.each do |c| %>
	<tr>
		<td><%=c.name%></td>
		<td><%= c.created_at.to_time.strftime('%e %B Ã  %l:%M %p')%></td>			
		<td>
			<%= link_to "Edit" , edit_admin_category_path(c) , class:'btn btn-primary' %>  
		<%= link_to "Delete" , admin_category_path(c) , class:'btn btn-danger' , method: :delete , data: {confirm:"Confirmez cette suppression..."} %></td>
		
	</tr>
	<%end%>
</table>
<%= will_paginate @categories %>
<%else%>
	<p>Aucune Categorie</p>
<%end%>