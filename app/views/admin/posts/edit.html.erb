<script>
  $(function() {
    $('textarea#body_textarea').editable({
      inlineMode: false,
      theme: 'red',
      zIndex: 2002
    })
  });
</script>


<h2>Modification Post</h2>
<%= form_for [:admin, @post] do |f| %>
<% if @post.errors.any? %>
	<% @post.errors.full_messages.each do |m| %>
		<div class="alert alert-danger"><%= m %></div>
	<%end%> <!-- end Do m -->
<%end%> <!-- end If -->
<div class="form-group col-md-4 pull-left">
	<%= f.label :title %>
	<%= f.text_field :title,class:'form-control' %>
</div>

<div class="form-group col-md-4 pull-left">
	<%= f.label :category %>
	<%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Selectionnez une'} , class:'form-control' %>
</div>

<div class="form-group col-md-4 pull-left">
	<%= f.label :Auteur %>
	<%= f.select :user_id, User.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Selectionnez une'} , class:'form-control' %>
</div>

<div class="form-group col-md-4 pull-left">
	<%= f.label :image %>
	<%= f.file_field :image %>
</div>

<% if @post.image.exists? %>
	<div class="form-group col-md-4 pull-left">
		<%= f.label :image %>
		<%= image_tag @post.image.url, width: '100%' %>
	</div>
<% end %>

<div class="form-group col-md-4 pull-right">
	<%= f.label :tags %>
	<%= f.text_area :tags,class:'form-control' %>
</div>

<div class="form-group col-md-4 pull-right">
	<%= f.label :body %>
	<%= f.text_area :body,class:'form-control' ,id:"body_textarea" %>
</div>

<br>
<div class="form-group col-md-4 pull-right"><%= f.submit "Submit" , class:'btn btn-primary'  %>
	<%=  link_to "Cancel" , admin_posts_path, class:'btn btn-default' %></div>
<%end%> <!-- end Do f -->


